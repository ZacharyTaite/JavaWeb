<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>BookListServlet</servlet-name>
        <servlet-class>com.teamsun.web.BookListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.teamsun.web.AddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindBookByIdServlet</servlet-name>
        <servlet-class>com.teamsun.web.FindBookByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBookServlet</servlet-name>
        <servlet-class>com.teamsun.web.UpdateBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DelBookServlet</servlet-name>
        <servlet-class>com.teamsun.web.DelBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DelAllBooksServlet</servlet-name>
        <servlet-class>com.teamsun.web.DelAllBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchBooksServlet</servlet-name>
        <servlet-class>com.teamsun.web.SearchBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageServlet</servlet-name>
        <servlet-class>com.itheima.web.servlet.PageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findBookInfoServlet</servlet-name>
        <servlet-class>com.teamsun.web.FindBookInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookListServlet</servlet-name>
        <url-pattern>/servlet/bookListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/servlet/addBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindBookByIdServlet</servlet-name>
        <url-pattern>/servlet/findBookByIdServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBookServlet</servlet-name>
        <url-pattern>/servlet/updateBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DelBookServlet</servlet-name>
        <url-pattern>/servlet/delBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DelAllBooksServlet</servlet-name>
        <url-pattern>/servlet/delAllBooksServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchBooksServlet</servlet-name>
        <url-pattern>/servlet/searchBooksServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/servlet/pageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findBookInfoServlet</servlet-name>
        <url-pattern>/servlet/findBookInfoServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>